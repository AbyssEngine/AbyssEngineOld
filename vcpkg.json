{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "abyss",
  "version": "0.0.1",
  "dependencies": [
    "cxxopts",
    {
      "name": "sdl2",
      "features": [
        "alsa"
      ],
      "platform": "linux"
    },
    {
        "name": "sdl2",
        "platform": "!linux"
    },
    "nlohmann-json",
    "rapidjson",
    "spdlog",
    "zlib",
    {
      "name": "abseil",
      "features": [
        "cxx17"
      ]
    },
    {
      "name": "ffmpeg",
      "features": [
        "avcodec",
        "avdevice",
        "avfilter",
        "avformat",
        "avresample",
        "swscale",
        "swresample",
        "ffmpeg"
      ]
    }
  ]
}
